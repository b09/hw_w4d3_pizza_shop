<p>All the pizzas!</p>

<% @orders.each do |order|  %>
  <p>Name: <%= order.pretty_name %></p>
  <p>Order: <%= order.quantity %> x <%= order.topping %></p>
  <p><a href="/pizza_orders/<%= order.id %>">Show Order</a></p>
  <form method="post" action="/pizza_orders/:id/delete"><button>Delete</button></form>
  <hr/>
<% end %>
